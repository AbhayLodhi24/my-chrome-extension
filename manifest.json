{
    "manifest_version": 3,
    "name": "Product Info Extractor",
    "version": "1.0",
    "description": "Extracts product information from fashion e-commerce websites.",
    "permissions": ["activeTab","scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.zara.com/*" , "*://*.hm.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  
